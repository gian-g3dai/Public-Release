<Window x:Class="Unakin.SimpleInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rows Input" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter the number of rows:" VerticalAlignment="Center"/>
        <TextBox x:Name="txtRows" Grid.Row="1" Margin="0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="0,10,0,0">
            <Button x:Name="btnOk" Content="OK" Click="BtnOk_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
