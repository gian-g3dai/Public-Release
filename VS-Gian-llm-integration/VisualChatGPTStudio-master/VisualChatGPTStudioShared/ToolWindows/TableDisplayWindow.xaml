<Window x:Class="Unakin.TableDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Preview" Height="450" Width="800"
        Background="#282828A0">
	<!-- Match the background color -->
	<DockPanel>
		<!-- Update button style -->
		<Button DockPanel.Dock="Bottom" Height="30" Margin="5" Click="SaveButton_Click" Background="White" Foreground="Black">Save</Button>

		<ScrollViewer>
			<!-- Update TextBox style to match the theme -->
			<TextBox x:Name="DataTextBox" IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas" Background="#333333" Foreground="White"/>
		</ScrollViewer>
	</DockPanel>
</Window>
